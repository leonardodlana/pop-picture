<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="272dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:padding="0dp"
    android:layout_margin="2dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/picture_description_gradient"
        android:layout_height="42dp"/>

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/picture_description_background"
        android:text=""
        android:textSize="@dimen/small_text"
        android:layout_marginEnd="@dimen/picture_description_margin_right"
        android:layout_marginBottom="@dimen/picture_description_margin_bottom"
        android:textColor="@color/md_white_1000"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_like"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="@dimen/picture_description_margin_right"
        android:layout_marginBottom="@dimen/picture_description_margin_bottom"
        android:layout_gravity="bottom"
        android:tint="@color/md_white_1000"
        android:src="@drawable/ic_liked"/>

    <TextView
        android:id="@+id/text_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text=""
        android:textSize="@dimen/small_text"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/md_white_1000"/>

</android.support.v7.widget.CardView>