<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="false"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/md_grey_600"
        android:padding="16dp"
        android:src="@drawable/ic_profile"
        android:tint="@color/md_white_1000" />

    <EditText
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/edit_text_profile_name"
        android:layout_below="@id/image_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:hint="@string/name"
        android:textColor="@color/md_black_1000" />


    <leonardolana.poppicture.common.ButtonTextViewOutlined
        android:id="@+id/button_profile_update"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_min_height"
        android:layout_below="@+id/edit_text_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dialog_button_top_margin"
        android:gravity="center"
        android:elevation="2dp"
        android:visibility="gone"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/button_text"
        android:text="@string/update" />

    <leonardolana.poppicture.common.ButtonTextViewContained
        android:id="@+id/button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_min_height"
        android:layout_below="@+id/edit_text_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dialog_button_top_margin"
        android:gravity="center"
        android:elevation="2dp"
        android:textAllCaps="true"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/button_text"
        android:text="@string/sign_in" />


</RelativeLayout>